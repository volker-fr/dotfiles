export PATH=/usr/local/bin:/usr/local/sbin:${PATH}:/sbin:/usr/sbin
export PATH=${PATH}:~/repos/dotfiles/bin

# load ~/.bc.rc config
export BC_ENV_ARGS="$HOME/.bc.rc"

# colored less
