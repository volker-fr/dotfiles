}
otrdecoder(){
    # contains the secrets
    docker run --rm -it \
        -e "otrEmail=${otrusername}" \
        -e "otrPassword=${otrpassword}" \
        -e "convert=false" \
        -v "$HOME/Downloads:/otr" \
        develcab/otr
}
