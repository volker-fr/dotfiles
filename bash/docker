x11vnc(){
    export DISPLAY=:0
    xhost +SI:localuser:root

    docker run --rm -it \
        -p 5900:5900 \
        -v /tmp/.X11-unix:/tmp/.X11-unix \
        -v /etc/localtime:/etc/localtime:ro \
        --ipc=host \
        volkerfr/x11vnc "$@"
}
